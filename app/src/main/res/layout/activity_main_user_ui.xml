<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_user_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="myeconomy.shungy.com.myeconomy.MainUserUi">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/mainmenulist">

        <Button
            android:text="Debit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/debit_button"
            android:elevation="10dp"
            android:onClick="openActivity" />

        <Button
            android:text="Credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/credit_button"
            android:onClick="openActivity" />

        <Button
            android:text="Show Balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/showBalance_button"
            android:onClick="openActivity" />

        <Button
            android:text="History"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/history_button"
            android:onClick="openActivity"/>
    </LinearLayout>
</RelativeLayout>
