<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/current_balance_credit"
        android:hint="Credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/current_balance_name"
        android:layout_alignBottom="@+id/current_balance_name"
        android:layout_toRightOf="@+id/current_balance_name"
        android:layout_toEndOf="@+id/current_balance_name"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp" />

    <TextView
        android:id="@+id/current_balance_name"
        android:hint="Name"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:hint="Current balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_balance_balance"
        android:layout_alignBaseline="@+id/current_balance_credit"
        android:layout_alignBottom="@+id/current_balance_credit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:hint="Debit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_balance_debit"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp"
        android:layout_alignBottom="@+id/current_balance_balance"
        android:layout_toLeftOf="@+id/current_balance_balance"
        android:layout_toStartOf="@+id/current_balance_balance" />

</RelativeLayout>
